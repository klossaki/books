<!DOCTYPE html>
<html>
<head>
  <title>RailsInterview</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="sign_in">
  <% if user_signed_in? %>
    <b>Email:</b> <%= current_user.email if user_signed_in? %></br>
   <%= link_to "Log out", destroy_user_session_path, :method => :delete %>
  <% else %>
  <%= link_to "Log in", new_user_session_path %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
